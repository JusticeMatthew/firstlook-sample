---
import { getCollection } from "astro:content";
import BaseLayout from "$/layouts/BaseLayout.astro";
import GameForm from "$/components/GameForm";

const games = await getCollection("games");
---

<BaseLayout>
  <div class="container">
    <section
      class="border-border bg-section my-12 flex flex-col items-center justify-center rounded-xl border-4 p-12">
      <p class="hidden pb-8 text-lg text-white/80 dark:inline">
        Dark mode Enabled!
      </p>
      <h1 class="text-heading text-3xl font-bold">
        Which of these games do you like?
      </h1>
      <GameForm games={games} client:load />
    </section>
  </div>
</BaseLayout>
